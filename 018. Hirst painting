# colors_list = [(color.rgb.r, color.rgb.g, color.rgb.b) for color in colors]
# print(colors_list)

from turtle import Turtle, Screen
import random

COLOR_LIST = [(252, 250, 247), (253, 247, 249), (237, 251, 245), (249, 228, 17), (213, 13, 9), (198, 12, 35),
              (231, 228, 5), (197, 69, 20), (33, 90, 188), (43, 212, 71), (234, 148, 40), (33, 30, 152), (16, 22, 55),
              (66, 9, 49), (240, 245, 251), (244, 39, 149), (65, 202, 229), (14, 205, 222), (63, 21, 10), (224, 19, 111),
              (229, 165, 8), (15, 154, 22), (245, 58, 16), (98, 75, 9), (248, 11, 9), (222, 140, 203), (68, 240, 161),
              (10, 97, 62), (5, 38, 33), (68, 219, 155), (238, 157, 212), (86, 77, 208), (86, 225, 235), (250, 8, 14),
              (242, 166, 157), (177, 180, 224), (36, 243, 159), (6, 81, 115), (11, 55, 248)]

DOT_SPACE = 50
DOT_SIZE = 20

# create a painting with 10 X 10 dots, each dot 20 in size and 50 spaces apart from each other

turtle = Turtle()
turtle.shape("arrow")
turtle.speed(0)
turtle.hideturtle()
# turtle.pencolor("white")

screen = Screen()
screen.setup(width=900, height=900)
screen.colormode(255)

for height in range(10):
    turtle.penup()
    turtle.goto(-225, -225 + DOT_SPACE * height)
    for width in range(10):
        turtle.pendown()
        # turtle.fillcolor(random.choice(COLOR_LIST))
        # turtle.begin_fill()
        # turtle.circle(DOT_SIZE/2)
        # turtle.end_fill()
        turtle.dot(DOT_SIZE, random.choice(COLOR_LIST))
        turtle.penup()
        turtle.forward(DOT_SPACE)

screen.exitonclick()

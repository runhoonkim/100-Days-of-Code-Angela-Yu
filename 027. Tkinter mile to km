import tkinter as tk

window = tk.Tk()
window.title("Mile to KM Converter")
window.config(bg="white")

window.config(padx=20, pady=20)

def button_clicked():
    miles = float(entry.get())
    kilo = str(round(miles * 1.60934))
    label.config(text=kilo)

entry = tk.Entry(window, width=5, highlightcolor="blue")
entry.insert(tk.END, "0")
entry.grid(row=0, column=1)

text_miles = tk.Text(window, width=5, height=1, highlightthickness=0)
text_miles.insert(tk.END, "Miles")
text_miles.grid(row=0, column=2)

text_equal = tk.Text(window, width=12, height=1, highlightthickness=0)
text_equal.insert(tk.END, "is equal to")
text_equal.grid(row=1, column=0)


label = tk.Label(window, text="0", highlightthickness=0,bg="white")
label.grid(row=1, column=1)

text_km = tk.Text(window, width=5, height=1, highlightthickness=0)
text_km.insert(tk.END, "Km")
text_km.grid(row=1, column=2)

button = tk.Button(window, text="Calculate", command=button_clicked,  bg="white", highlightthickness=0, highlightbackground="white")
button.grid(row=2, column=1)


window.mainloop()

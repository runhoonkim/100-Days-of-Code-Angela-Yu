from turtle import Turtle, Screen
from paddle import Paddle
from ball import Ball
from scoreboard import Scoreboard
import time

# TODO 0: set up the screen and draw a dotted line in the middle
screen = Screen()
screen.setup(width=800, height=600)
screen.bgcolor("black")
screen.title("Pong")


screen.tracer(0)

# TODO 1: create two bars one on left the other on right
paddle_l = Paddle((-350, 0))
paddle_r = Paddle((350, 0))


# TODO 2: using onkey method of screen enable the bar to move
# 2-1: ws for left bar and up, down for right bar
screen.listen()
screen.onkey(paddle_l.up, "w")
screen.onkey(paddle_l.down, "s")
screen.onkey(paddle_r.up, "Up")
screen.onkey(paddle_r.down, "Down")

# TODO 3: create a scoreboard to keep track of the screen
scoreboard = Scoreboard()

# TODO 4: create a ball that moves around the screen

ball = Ball()

game_is_on = True
while game_is_on:
    time.sleep(0.1)
    screen.update()
    ball.move()

    # 4-1: ball should bounce when it goes upper or lower side of the screen
    if ball.ycor() > 290 or ball.ycor() < -290:
        ball.bounce_y()

    # 4-2: ball should bounce when it touches the bar
    if (ball.distance(paddle_r) < 50 and ball.xcor() > 320) or (ball.distance(paddle_l) < 50 and ball.xcor() < -320):
        ball.bounce_x()

    # 4-3: when the paddle misses the ball and goes outside the screen, reset game and add score
    # Detect R paddle misses
    if ball.xcor() > 380:
        ball.refresh()
        scoreboard.l_point()

    # Detect L paddle misses
    if ball.xcor() < -380:
        ball.refresh()
        scoreboard.r_point()

    # if ball.xcor() > 390 or ball.ycor() > 290:
    #     ball = Ball()





screen.exitonclick()

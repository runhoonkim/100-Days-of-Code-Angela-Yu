import requests

API_KEY = "a5554caa5793af559ef1cf6c3f7396bb"
MY_LAT = 37.011202811908255
MY_LONG = 127.10462188631244
URL = "https://api.openweathermap.org/data/2.5/forecast"

params = {
    "lat": MY_LAT,
    "lon": MY_LONG,
    "cnt": 4,
    "appid": API_KEY,
}

response = requests.get(url=URL, params=params)
response.raise_for_status()
weather_data = response.json()
weather_id_list = [int(dict['weather'][0]['id']) for dict in weather_data['list']]

will_rain = False
for weather_id in weather_id_list:
    if weather_id < 700:
        will_rain = True

if will_rain:
    print("Bring an umbrella.")

from turtle import Screen
import time
from car_manager import CarManager, MOVE_INCREMENT
from player import Player, FINISH_LINE_Y
from scoreboard import Scoreboard


screen = Screen()
screen.setup(width=600, height=600)
screen.tracer(0)

player = Player()
car_manager = CarManager()
scoreboard = Scoreboard()

screen.listen()
screen.onkey(player.up, "Up")

game_is_on = True
while game_is_on:
    time.sleep(0.1)
    car_manager.create_car()
    car_manager.move_cars()

    # When the turtle hits the top edge
    if player.ycor() > FINISH_LINE_Y:
        player.refresh()
        scoreboard.increase_level()
        car_manager.speed += MOVE_INCREMENT

    for car in car_manager.car_list:
        if ((car.ycor() - 20 < player.ycor() < car.ycor() + 20)
                and (car.xcor() - 20 < player.xcor() < car.xcor() + 20)
                and player.distance(car) < 28):
            scoreboard.game_over()
            game_is_on = False

    screen.update()

screen.exitonclick()

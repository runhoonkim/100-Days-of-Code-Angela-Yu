# Build a snake game
from turtle import Turtle, Screen
from snake import Snake
import time


screen = Screen()
screen.setup(width=600, height=600)
screen.bgcolor("black")
screen.title("My Snake Game")
screen.tracer(0)

# starting_positions = [(0, 0), (-20, 0), (-40, 0)]

# TODO 1: Create a snake body
snake = Snake()

game_is_on = True

# TODO 2: Move the snake
# keeps moving until we change direction

while game_is_on:
    screen.update()
    time.sleep(0.1)

    snake.move()

# TODO 3: Control the snake
# up, left, down, right arrow keys to control the snake.



# TODO 4: Detect collision with food
# create food in random position and when the snake gets the food create new one

# TODO 5: Create a scoreboard
# the score updates when snake gets the food

# TODO 6: Detect collision with wall
# show game_over

# TODO 7: Detect collision with tail
# show game_over

screen.exitonclick()

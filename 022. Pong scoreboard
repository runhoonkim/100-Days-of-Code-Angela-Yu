from turtle import Turtle

ALIGNMENT = "center"
FONT = ("Courier", 80, "normal")


class Scoreboard(Turtle):
    def __init__(self):
        super().__init__()
        self.color("white")
        self.penup()
        self.hideturtle()
        self.speed("fastest")
        self.l_score = 0
        self.r_score = 0
        self.draw_line()
        self.update_scoreboard()

    def draw_line(self):
        self.goto(0, -300)
        self.setheading(90)
        self.pencolor("white")
        self.pensize(3)
        for _ in range(30):
            self.forward(10)
            self.pendown()
            self.forward(10)
            self.penup()



    def update_scoreboard(self):
        self.clear()
        self.goto(-100, 200)
        self.write(self.l_score, align=ALIGNMENT, font=FONT)
        self.goto(100, 200)
        self.write(self.r_score, align=ALIGNMENT, font=FONT)

    def l_point(self):
        self.l_score += 1

    def r_point(self):
        self.r_score += 1

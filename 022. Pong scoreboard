from turtle import Turtle

class Scoreboard(Turtle):
    def __init__(self):
        super().__init__()
        self.color("white")
        self.penup()
        self.hideturtle()
        self.speed("fastest")
        self.penup()
        self.hideturtle()
        self.goto(0, -300)
        self.setheading(90)
        self.pencolor("white")
        self.pensize(3)
        for _ in range(30):
            self.forward(10)
            self.pendown()
            self.forward(10)
            self.penup()

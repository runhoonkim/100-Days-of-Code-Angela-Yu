# Build a snake game
from turtle import Screen
from snake import Snake
from food import Food
from scoreboard import Scoreboard
import time


screen = Screen()
screen.setup(width=600, height=600)
screen.bgcolor("black")
screen.title("My Snake Game")
screen.tracer(0)

# starting_positions = [(0, 0), (-20, 0), (-40, 0)]

# TODO 1: Create a snake body
snake = Snake()
food = Food()
scoreboard = Scoreboard()

# TODO 2: Move the snake
# keeps moving until we change direction

# TODO 3: Control the snake
# up, left, down, right arrow keys to control the snake.

screen.listen()
screen.onkey(snake.up, "Up")
screen.onkey(snake.down, "Down")
screen.onkey(snake.left, "Left")
screen.onkey(snake.right, "Right")

game_is_on = True

while game_is_on:
    screen.update()
    time.sleep(0.1)

    snake.move()

    # TODO 4: Detect collision with food
    # create food in random position and when the snake gets the food create new one
    if snake.head.distance(food) < 15:
        food.refresh()
        snake.extend()

        # TODO 5: Create a scoreboard
        # the score updates when snake gets the food
        scoreboard.add_score()

    # TODO 6: Detect collision with wall
    # show game_over
    if snake.head.xcor() > 280 or snake.head.xcor() < -280 or snake.head.ycor() > 280 or snake.head.ycor() < -280:
        game_is_on = False
        scoreboard.game_over()

    # TODO 7: Detect collision with tail
    # If head collides with any segment in the tail, show game_over
    for segment in snake.segments[1:]:
        if snake.head.distance(segment) < 10:
            game_is_on = False
            scoreboard.game_over()


screen.exitonclick()
